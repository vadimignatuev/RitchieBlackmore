@model RitchieBlackmore.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <h1 class="text-light">Registraite New User</h1>
    <hr class="thin" />
    <br />
    <div class="input-control text full-size" data-role="input">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { id="user_login" })
        <br />
        @Html.ValidationMessageFor(m => m.UserName)
        <button class="button helper-button clear"><span class="mif-cross"></span></button>
    </div>
    <br />
    <br />
    <div class="input-control text full-size" data-role="input">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { id="user_emain" })
        <br />
        @Html.ValidationMessageFor(m => m.Email)
        <button class="button helper-button clear"><span class="mif-cross"></span></button>
    </div>
    <br />
    <br />
    <br />
    <div class="input-control password full-size" data-role="input">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { id="user_password" })
        <br />
        @Html.ValidationMessageFor(m => m.Password)
        <button class="button helper-button reveal"><span class="mif-looks"></span></button>
    </div>
    <br />
    <br />
     <div class="input-control text full-size" data-role="input">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.TextBoxFor(m => m.ConfirmPassword, new { id="user_confirmPassword" })
         <br />
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
        <button class="button helper-button clear"><span class="mif-cross"></span></button>
    </div>
    <br />
    <div class="form-actions">
        <br />
        <button type="submit" class="button primary" value="Register">Register</button>
    </div>
}

