@model RitchieBlackmore.Models.ProductModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type ="text/javascript">

    function clickSaccessAddProduct() {
        var link = $("#idSubmitNewProduct")[0];
        var linkEvent = null;
        if (document.createEvent) {
            linkEvent = document.createEvent('MouseEvents');
            linkEvent.initEvent('click', true, true);
            link.dispatchEvent(linkEvent);
        }
        else if (document.createEventObject) {
            linkEvent = document.createEventObject();
            link.fireEvent('onclick', linkEvent);
        }
    }

</script>

<div class="margin60" >
   @using (Ajax.BeginForm("CreateNewProduct", "Products", new AjaxOptions { UpdateTargetId = "newProduct", OnSuccess = "saccessCreateNewProduct" }, new { @id = "createNewProduct" }))
   {
         @Html.ValidationSummary(true)
    
        <legend>Create product</legend>
   
        
        <div class = "margin20 no-margin-left">
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
       
            <div class="editor-field">
                <div class="input-control password full-size" data-role="input">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input-control text" } })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
        </div>
        <div class = "margin20 no-margin-left">
            <div class="editor-label">
                @Html.LabelFor(model => model.Price)
            </div>
            <div class="editor-field">
                <div class="input-control password full-size" data-role="input">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "input-control text" } })
                    @Html.ValidationMessageFor(model => model.Price)
                </div>
            </div>
        </div>
       
       <button class="button success" onclick="clickSaccessAddProduct"> Start <span class="mif-checkmark"></span></button>

       <div style ="display:none">
           <p>
             <input id ="idSubmitNewProduct" type="submit" class = "button primary" value="Create" />
           </p>
       </div>
   }            
</div>

