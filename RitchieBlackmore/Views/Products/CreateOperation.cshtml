@model RitchieBlackmore.Models.OperationModel

@*<script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
   
    // @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>

        <div style ="display: none">
            @Html.LabelFor(model => model.IdProduct)
            @Html.EditorFor(model => model.IdProduct)
         </div>       
        @Html.LabelFor(model => model.ProductName)
        @Model.ProductName

        <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        <p>
            @Html.LabelFor(model => model.choice)
            @Html.DropDownListFor(model=>model.choice, Model.list, "Change", new { @class = "form-control" })
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
