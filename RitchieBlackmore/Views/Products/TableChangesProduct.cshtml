@model RitchieBlackmore.Models.TableChangesProduct
@*<div class ="cell size-x400">*@
 <div class="flex-grid no-responsive-future" style="height: 100%; width: 100%">
          <div class ="row">
             <span class="mif-warning mif-3x fg-red"></span><h3 class ="fg-red" style="width: 100%">Product was change since you started editing</h3>
           </div>
          <div class ="row">
                <table class="table border bordered sortable-markers-on-left">
                <thead>
                    <tr>
                        <th class="flex-dir-column"></th>
                        <th class="flex-dir-column">@Html.LabelFor(model => model.EditProduct.Name)</th>
                        <th class="flex-dir-column">@Html.LabelFor(model => model.EditProduct.Price)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="flex-dir-column"><h5>Before edit</h5></td>
                        <td class="flex-dir-column">@Model.ProductBeforeEdit.Name</td>
                        <td class="flex-dir-column">@Model.ProductBeforeEdit.Price</td>
                    </tr>
                     <tr>
                        <td class="flex-dir-column"><h5>Your values</h5></td>
                        <td class="flex-dir-column">@Model.EditProduct.Name</td>
                        <td class="flex-dir-column">@Model.EditProduct.Price</td>
                    </tr>
                     <tr>
                        <td class="flex-dir-column"><h5>Present values</h5></td>
                        <td class="flex-dir-column">@Model.PresentProduct.Name</td>
                        <td class="flex-dir-column">@Model.PresentProduct.Price</td>
                    </tr>
                </tbody>
                </table>
              </div>
        <div class ="row">
            <p class="margin20 no-margin-bottom no-margin-top fg-red"> Select one of the options </p>
             </div>
         <div class ="row margin20">
             <button class="button success" onclick="saveMyProductBeforeEdit()"><span class="mif-upload2"></span> Before edit</button>
             <button class="button primary" onclick="saveMyProductAfterEdit()"><span class="mif-arrow-up-right"></span> Your values</button>
             <button class="button info" onclick="savePresentMean()"><span class="mif-checkmark"></span> Present values</button>
            </div>
         </div>
    @* </div>*@
 
